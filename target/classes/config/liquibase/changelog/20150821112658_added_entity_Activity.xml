<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Activity.
    -->
    <changeSet id="20150821112658" author="jhipster">
        <createTable tableName="ACTIVITY">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="start" type="timestamp"/>
            <column name="end" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="input" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <dropDefaultValue tableName="ACTIVITY" columnName="start" columnDataType="datetime"/>

        <dropDefaultValue tableName="ACTIVITY" columnName="end" columnDataType="datetime"/>

        
    </changeSet>
</databaseChangeLog>
